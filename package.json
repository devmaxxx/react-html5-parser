{
  "name": "react-html5-parser",
  "version": "0.0.1",
  "description": "Parse html into react",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.esm.js",
  "umd:main": "./dist/index.umd.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.modern.js",
      "umd": "./dist/index.umd.js"
    }
  },
  "files": [
    "src",
    "dist",
    "package.json"
  ],
  "scripts": {
    "dev": "microbundle watch src/*.ts --no-sourcemap --no-compress --generateTypes false --external react",
    "size-check": "filesize",
    "clean": "rimraf dist",
    "build:lib": "microbundle src/*.ts --external react",
    "build:debug": "npm run build:lib -- -o debug --no-compress",
    "build": "npm run clean && npm run build:lib",
    "build:size": "npm run build && npm run size-check",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "author": "devmaxxx",
  "license": "MIT",
  "devDependencies": {
    "@ampproject/filesize": "^4.3.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/dompurify": "^2.3.4",
    "@types/jest": "^29.2.0",
    "@types/react": "^18.0.22",
    "@types/react-dom": "^18.0.7",
    "@types/testing-library__jest-dom": "^5.14.5",
    "jest": "^29.2.1",
    "jest-environment-jsdom": "^29.2.1",
    "microbundle": "^0.15.1",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "dompurify": "^2.4.0"
  },
  "engines": {
    "node": ">=14.16"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setupTests.ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts?(x)"
    ],
    "testEnvironment": "jsdom"
  },
  "filesize": {
    "./dist/index.modern.js": {
      "gzip": "10 kB"
    },
    "./dist/index.cjs": {
      "gzip": "10 kB"
    }
  }
}
